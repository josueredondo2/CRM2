@model IEnumerable<C_R_M.Models.Correo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var idex = Model.FirstOrDefault();
    int contacto = 0;
    if(idex != null)
    {
        contacto = idex.Contacto1.Id_Contacto;
    };
}


<h2>Correos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Correo1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto1.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Correo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto1.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Correo }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Correo }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Correo })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Volver a la lista", "../Contactoes/Index", new { id = @contacto })