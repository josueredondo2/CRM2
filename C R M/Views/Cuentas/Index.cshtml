@model IEnumerable<C_R_M.Models.Cuenta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cuentas</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Pago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto_Abono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto_Pendiente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServicioEmpresa.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Pago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto_Abono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto_Pendiente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServicioEmpresa.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_Cuenta }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_Cuenta }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Cuenta })
        </td>
    </tr>
}

</table>
