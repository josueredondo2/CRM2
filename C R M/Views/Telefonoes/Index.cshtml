@model IEnumerable<C_R_M.Models.Telefono>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int contacto = Model.FirstOrDefault().Contacto1.Id_Contacto;
}

<h2>Telefonos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Telefono1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto1.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto1.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Telefono }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Telefono }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Telefono })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Volver a la lista", "../Contactoes/Index",new { id = @contacto } )
