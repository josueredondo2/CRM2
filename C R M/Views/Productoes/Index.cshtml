@model IEnumerable<C_R_M.Models.Producto>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear Nuevo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Producto)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Producto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id_Producto }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id_Producto }) |
                @Html.ActionLink("Borrar", "Delete", new { id=item.Id_Producto })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
